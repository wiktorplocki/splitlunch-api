{
  "env": {
      "es6": true,
      "node": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}